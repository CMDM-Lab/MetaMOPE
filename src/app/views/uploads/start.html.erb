<div class="content">
    <h2 style='font-size:36px'>Upload project file</h2>
    <hr style="width:1210px">

    <%= form_for Upload.new do |f| %>
        <% if @project.mobile_phase_evaluation %>
            <% if @project.peak_evaluation %>
                <h3>Mobile phase & Peak evaluation</h3>
            <% else %>
                <h3>Mobile phase evaluation</h3>
            <% end %>
            <div>
                <%= f.label :upload_grouping_file %>
                <%= f.file_field :grouping %>
                <br>
                <br>
            </div>

            <div>
                <%= f.label :upload_standard_file %>
                <%= f.file_field :standard %>
                <br>
                <br>
            </div>

            <div>
                <%= f.label :upload_mzxml_file %>
                <%= f.file_field :mzxml %>
                <br>
                <%= f.submit "Upload" %>
            </div>

        <% else %>
            <h3>Peak evaluation</h3>
            <div>
                <%= f.label :upload_injection_order_file %>
                <%= f.file_field :injection %>
                <br>
                <br>
            </div>
            <div>
                <%= f.label :upload_standard_file %>
                <%= f.file_field :standard %>
                <br>
                <br>
            </div>
            <div>
                <%= f.label :upload_mzxml_file %>
                <%= f.file_field :mzxml %>
                <br>
                <%= f.submit "Upload" %>
            </div>
        <% end %>
    <% end %>

    <hr style="width:1210px">

    <h3>Uploaded file</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Upload id</th>
                <th>File name</th>
                <th>File size</th>
                <th>Upload time</th>
            </tr>
        </thead>
        <tbody>
            <% @project.uploads.each do |upload| %>
                <tr>
                    <td><%= upload.id %></td>
                    <td>
                        <ol>
                            <li><%= upload.grouping.filename%></li>
                            <li><%= upload.standard.filename%></li>
                            <li><%= upload.mzxml.filename%></li>
                        </ol>
                    </td>
                    <td><%= upload.file_size %></td>
                    <td><%= upload.created_at %></td>
                <tr>
            <% end %>    
        </tbody>
    </table>

    
</div>