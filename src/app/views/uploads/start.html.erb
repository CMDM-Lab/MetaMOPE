<div class="content">
    <h2 style='font-size:36px'>Upload project file</h2>
    <hr style="width:1210px">

    <%= nested_form_for(@project) do |f| %>
        <%= f.fields_for :uploads do |u| %>
            <% if @project.mobile_phase_evaluation %>
                <h3>Mobile phase evaluation</h3>

                <div>
                    <%= u.label :upload_grouping_file %>
                    <%= u.file_field :grouping %>
                    <br>
                    <br>
                </div>

                <div>
                    <%= u.label :upload_standard_file %>
                    <%= u.file_field :standard %>
                    <br>
                    <br>
                </div>

                <div>
                    <%= u.label :mobile_phase %>
                    <%= u.text_field :mobile_phase %>
                </div>

                <div>
                    <%= u.label :upload_mzxml_files %>
                    <%= u.file_field :mzxml %>
                    <br>
                </div>

                <div>
                    <%= u.submit "Upload" %>
                </div>
                
                <%= u.link_to_remove "Remove this upload" %>

            <% end %>
            
            <% if @project.peak_evaluation %>
                <h3>Peak evaluation</h3>

                <div>
                    <%= u.label :upload_injection_order_file %>
                    <%= u.file_field :injection %>
                    <br>
                    <br>
                </div>

                <div>
                    <%= u.label :upload_standard_file %>
                    <%= u.file_field :standard %>
                    <br>
                    <br>
                </div>

                <div>
                    <%= u.label :mobile_phase %>
                    <%= u.text_field :mobile_phase %>
                </div>

                <div>
                    <%= u.label :upload_mzxml_files %>
                    <%= u.file_field :mzxml %>
                    <br>
                </div>

                <div>
                    <%= u.submit "Upload" %>
                </div>
                
                <%= u.link_to_remove "Remove this upload" %>

            <% end %>
    
        <% end %>
        <%= f.link_to_add "New upload", :uploads %>
    
    <% end %>

    <hr style="width:1210px">

    <h3>Uploaded file</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Mobile phase</th>
                <th>File name</th>
                <th>File size</th>
                <th>Upload time</th>
            </tr>
        </thead>
        <tbody>
            <% @project.uploads.each do |upload| %>
                <tr>
                    <td><%= upload.mobile_phase %></td>
                    <td>
                        <ol>
                            <li><%= upload.grouping.filename%></li>
                            <li><%= upload.standard.filename%></li>
                            <li><%= upload.mzxml.filename%></li>
                        </ol>
                    </td>
                    <td><%= upload.file_size %></td>
                    <td><%= upload.created_at %></td>
                <tr>
            <% end %>    
        </tbody>
    </table>

    
</div>