<div class="content">
    <h2 style="font-size:36px">Projects</h2>
    <hr style="width:1210px">

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Status</th>
                <th>Parameters</th>
                <th>Created at</th>
            </tr>
        </thead>
        <tbody>
            <% @projects.each do |project| %>
                <tr>
                    <td><%= project.name %>
                        <br>
                        Access_key: <%= project.access_key %>
                        <br>
                        <div class='btn-group'>
                            <%= link_to 'Select', start_upload_path(project.id), :title => 'Select this project' %>
                        </div>
                    </td>
                    <td><%= project.status %></td>
                    <td>
                        <ul>
                            <li>Window_size:<%= project.mcq_win_size %></li>
                            <li>Number_of_sample_repeats:<%= project.sample_repeat %></li>
                            <li>Flatness_factor:<%= project.flat_fac %></li>
                            <li>MCQ_threshold:<%= project.mcq_threshold %></li>
                            <li>Peak_intensity_threshold:<%= project.peak_int_threshold %></li>
                            <li>std_over_blk:<%= project.std_blk %></li>
                            <li>rsd_of_rt:<%= project.rsd_rt %></li>
                            <li>Jagedness:<%= project.jagedness %></li>
                            <li>Assymetric_factor:<%= project.assy_fac %></li>
                            <li>FWHM:<%= project.fwhm %></li>
                            <li>Modality:<%= project.modality %></li>
                        </ul>
                    </td>
                    <td><%= project.created_at %></td>
                    <td></td>
                <tr>
            <% end %>
        </tbody>
    </table>

    <%= link_to 'Create a project', new_project_path, :class => 'btn fa-plus-circle btn-right' %>
</div>
